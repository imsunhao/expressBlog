<%- include header.ejs %>

<script>
    $(function () {
        moment.locale('zh-cn');
        var time = 0;
        if (moment('<%= createTime %>', 'YYYY年MM月DD日 HH时mm分ss秒').isValid()) {
            time = '<%= createTime %>';
        } else {
            time = moment('<%= createTime %>').format('YYYY年MM月DD日 HH时mm分ss秒')
        }
        var app = new Vue({
            el: '#editor',
            data: {
                input: $('#content').eq(0).val(),
                tag:'<%=tag%>',
                author: '<%= author %>',
                title: '<%= title %>',
                createTime: time
            },
            computed: {
                compiledMarkdown: function () {
                    return marked(this.input, {sanitize: true})
                }
            },
            methods: {
                update: _.debounce(function (e) {
                    $('code, pre').addClass('prettyprint');
                    prettyPrint();
                    this.input = e.target.value
                }, 300),
                submit:function (e) {
                    $('#createTime').val(new Date(moment(this.createTime,'YYYY年MM月DD日 HH时mm分ss秒')));
                    $('#form')[0].submit();
                }
            }
        })
    });
</script>
</head>
<body>
<div id="editor">
    <div class="container">
        <form id="form" class="main edit" action="#" method="post">
            <p><label for="title">标题：</label><input id="title" name="title" type="text" v-model="title" placeholder="标题" autocomplete="off"></p>
            <p><label for="author">作者：</label><input id="author" type="text" name="author" v-model="author" placeholder="作者" autocomplete="off" disabled></p>
            <p><label for="createTime">日期：</label><input id="createTime" name="createTime" type="text"  v-model="createTime" autocomplete="off"></p>
            <p><label for="tag">标签：</label><input id="tag" name="tag" type="text"  v-model="tag"></p>
            <textarea id="content" :value="input" @input="update" name="content"><%=input%></textarea>
            <p class="clear"><a href="#">删除本篇文章</a><a class="button" @click="submit">保存本篇文章</a></p>
        </form>
        <div class="main">
            <div class="article">
                <h1>{{title}}</h1>
                <h6>author:{{author}}</h6>
                <h6>createTime:{{createTime}}</h6>
<div v-html="compiledMarkdown"></div>

