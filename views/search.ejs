<form action="/post" method="post">
    <table>
        <caption>查询结构</caption>
        <tr><th>title</th><th>tag</th><th>content</th><th>createTime</th><th>author</th></tr>
        <% arts.forEach(function(art) { %>
        <tr><td><%=art.title%></td><td><%=art.tag%></td><td><%=art.content%></td><td><%=art.createTime%></td><td><%=art.author%></td></tr>
        <% }) %>
    </table>
</form>