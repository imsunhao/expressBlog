<%- include public/header.ejs %>

<table class="table table-striped">
    <caption>查询</caption>
    <tr>
        <th>用户名</th>
        <th>余额</th>
        <th>上次吃午饭下订单的时间</th>
        <th>查看用户消费详情</th>
    </tr>
    <%var d="";
    users.forEach(function(user) {
    d=new Date(user.changeTime);
    %>
    <tr>
        <td><%= user.username %></td>
        <td><%= user.sum %></td>
        <td><%=(d.getFullYear()+" 年 "+(d.getMonth()+1)+" 月 "+ d.getDate()+ " 日")%></td>
        <td><a href="/meal/mealDetails/<%= user._id %>">消费详情</a></td>
    </tr>
    <% }) %>
</table>

